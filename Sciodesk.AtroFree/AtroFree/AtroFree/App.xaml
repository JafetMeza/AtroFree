            <Style TargetType="Label" x:Key="Title">
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="20"/>
            </Style>

            <Style TargetType="Label" x:Key="Subtitle">
                <Setter Property="FontSize" Value="Subtitle"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <Style TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="IsClippedToBounds" Value="True"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>

            <Style TargetType="Button" x:Key="Deny">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="{StaticResource DenyColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style TargetType="Button" x:Key="Accept">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style TargetType="Switch">
                <Setter Property="ThumbColor" Value="{StaticResource Primary}"/>
                <Setter Property="OnColor" Value="{StaticResource Primary}"/>
            </Style>

            <OnPlatform x:Key="FontAwesome"
                x:TypeArguments="x:String"
                Android="fa-solid-900.ttf#Font Awesome 5 Free"/>
        </ResourceDictionary>        
    </Application.Resources>
</Application>
