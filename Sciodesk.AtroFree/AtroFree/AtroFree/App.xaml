        <ResourceDictionary>
            <Color x:Key="Primary">#FFC000</Color>
            <Color x:Key="Secondary">#92D050</Color>
            <Color x:Key="BackgroundPage">#f3f3f3</Color>
            <Color x:Key="DenyColor">#ff6c6c</Color>
